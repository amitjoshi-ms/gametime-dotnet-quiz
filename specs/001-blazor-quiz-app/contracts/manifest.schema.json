{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gametime-dotnet-quiz-data.pages.dev/schemas/manifest.schema.json",
  "title": "Manifest",
  "description": "Index of all available question chunks",
  "type": "object",
  "required": ["version", "generatedAt", "totalQuestions", "categories", "chunks"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "pattern": "^\\d+\\.\\d+$",
      "examples": ["1.0"]
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when manifest was generated"
    },
    "totalQuestions": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of questions across all chunks"
    },
    "categories": {
      "type": "array",
      "description": "Summary of questions per category",
      "items": {
        "$ref": "#/$defs/CategorySummary"
      }
    },
    "chunks": {
      "type": "array",
      "description": "References to all question chunks",
      "items": {
        "$ref": "#/$defs/ChunkReference"
      }
    }
  },
  "$defs": {
    "CategorySummary": {
      "type": "object",
      "required": ["name", "count"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Category identifier",
          "pattern": "^[a-z0-9-]+$",
          "examples": ["csharp-basics", "aspnet-basics"]
        },
        "count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of questions in this category"
        }
      }
    },
    "ChunkReference": {
      "type": "object",
      "required": ["id", "category", "count"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Chunk identifier (filename without .json)",
          "pattern": "^[a-z0-9-]+-\\d{3}-[a-f0-9]{8}$",
          "examples": ["csharp-basics-001-a1b2c3d4"]
        },
        "category": {
          "type": "string",
          "description": "Category of questions in this chunk",
          "pattern": "^[a-z0-9-]+$"
        },
        "count": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of questions in this chunk"
        }
      }
    }
  },
  "examples": [
    {
      "version": "1.0",
      "generatedAt": "2026-01-16T02:00:00Z",
      "totalQuestions": 150,
      "categories": [
        { "name": "csharp-basics", "count": 50 },
        { "name": "aspnet-basics", "count": 40 },
        { "name": "blazor-basics", "count": 60 }
      ],
      "chunks": [
        { "id": "csharp-basics-001-a1b2c3d4", "category": "csharp-basics", "count": 10 },
        { "id": "csharp-basics-002-e5f6g7h8", "category": "csharp-basics", "count": 10 }
      ]
    }
  ]
}
